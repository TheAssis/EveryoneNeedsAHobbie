	I want to do a cooler "Blinker Project". I gonna use 6 leds 
    (the number of PWM on the Uno Board is this) to do it! 
    By TheAssis. This is the version #1
*/

int aguarde = 100; //milisec time for newBlink()'s delay
const int n_leds = 6; //leds' number
const int pot_max=250; //max power to the leds
int led[n_leds] = {3,5,6,9,10,11};  //where to pin the leds


void setup(){
  Serial.begin(9600); //gonna send things to the screen
  for(int i = 0; i<n_leds; i++) //leds are OUTPUTS!
    pinMode(led[i],OUTPUT);
}

void newBlink(){
  for(int i=0; i<n_leds;i++){
    analogWrite(led[i-1],0);
    analogWrite(led[i],pot_max);
	delay(aguarde);
    if(i==n_leds)
      i=0;
  }
}

void loop(){
  for(int i=0; i<n_leds;i++)
    analogWrite(led[i],0);
  newBlink();
}
